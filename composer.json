{
    "name": "skaut/phan-wordpress-stubs",
    "description": "Stubs for WordPress functions and classes to be used with phan",
    "type": "library",
    "keywords": [
        "WordPress",
        "WordPress plugin",
        "WordPress theme",
        "phan",
        "stub",
        "stubs",
        "WordPress stubs"
    ],
    "homepage": "https://github.com/marekdedic/phan-wordpress-stubs",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
    {
        "name": "Marek Dědič",
        "email": "developer@dedic.eu"
    }
    ],
    "support": {
        "issues": "https://github.com/marekdedic/phan-wordpress-stubs/issues",
        "wiki": "https://github.com/marekdedic/phan-wordpress-stubs/wiki",
        "source": "https://github.com/marekdedic/phan-wordpress-stubs"
    },
    "require": {
        "php": "^7.0||^8.0"
    },
    "suggest": {
        "phan/phan": "A static analyzer for PHP"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.1",
        "phan/phan": "^4.0"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "phan": "export PHAN_DISABLE_XDEBUG_WARN=1; vendor/bin/phan",
        "lint": ["phpcs", "phan"]
    }
}
